@namespace BlazorGQL.Pages.Order
@page "/productlist"


<h1><span class="oi oi-box"></span> Products</h1>


<div>
    @if (_products == null)
    {
        <h3>Loading Products...</h3>
    }
    else
    {

        <div class="container mb-5 mt-5">
            <div class="row">
                @foreach (var product in _products)
                {
                    <div class="col-md-4">
                        <div class="card mt-3">
                            <div class="product-1 align-items-center p-2 text-center">
                                <img src="@product.Image" class="rounded" height="100" width="160">
                                <h5>@product.Name</h5>
                                <div class="mt-3 info"> <span class="text1 d-block">@product.Description</span> <span class="text1">@product.Color @product.Size</span> </div>
                                <div class=" cost mt-3 text-dark">
                                    <span>@product.Price</span>
                                </div>
                            </div>
                            <div class="p-3 bg-danger text-center text-white mt-3 cursor"> <span class="text-uppercase">In stock @product.Stock</span> </div>
                        </div>
                    </div>
                }
            </div>
        </div>

